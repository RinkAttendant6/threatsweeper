{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "prefer-const": ["off"],
        "@typescript-eslint/explicit-module-boundary-types": [
            "warn",
            {
                "allowedNames": [
                    "componentDidMount",
                    "componentDidUpdate",
                    "componentWillUnmount",
                    "componentDidCatch",
                    "render",
                    "shouldComponentUpdate"
                ]
            }
        ]
    }
}